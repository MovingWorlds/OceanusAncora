# EditorConfig Saves Developers' Lives: http://EditorConfig.org

# This is the top-most EditorConfig file
root = true

# Unix-style newlines for all!
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 2

# Indentation for CoffeeScript
[*.coffee]
indent_style = space
indent_size = 2

# Indentation for Jade
[*.jade]
indent_style = tab

# Indentation for package.json
[{package.json}]
indent_style = space
indent_size = 2
